{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "tmucha82/multi-client:latest",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "tmucha82/multi-server:latest",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "tmucha82/multi-worker:latest",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "tmucha82/multi-nginx:latest",
      "hostname": "nginx",
      "essential": true,
      "portMappings" : [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "client", "server"
      ]
    }
  ]
}
